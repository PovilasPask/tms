{% extends 'base.html.twig' %}

{% block title %}Turnyro komandos{% endblock %}

{% block breadcrumb %}
  <div class="container mt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/user-dashboard">Vartotojo veiksmai</a></li>
        <li class="breadcrumb-item"><a href="/tournaments/{{ tournament.id }}">{{ tournament.name }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Komandos</li>
      </ol>
    </nav>
  </div>
{% endblock %}

{% block body %}
  <h2 class="h2 text-center text-color-main">Turnyro komandos</h2>
  <div class="row">
    <div class="col-md-6">
      <h4>Pateiktos registracijos</h4>
      {% if teams1 is empty %}
        <p class="text-light">Komandų nėra.</p>
      {% else %}
        <ul>
          {% for team in teams1 %}
            <li>
              <a href="/teams/{{ team.id }}">{{ team.name }}</a>
              <a class="btn btn-sm btn-success mb-2" href="/teams/{{team.id}}/accept" role="button">&#10004;</a>
              <a class="btn btn-sm btn-danger mb-2" href="/teams/{{team.id}}/decline" role="button"  onclick="return confirm('Ar tikrai norite panaikinti registraciją?');">&#10006;</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <div class="col-md-6">
      <h4>Pakviestos komandos</h4>
      {% if teams2 is empty %}
        <p class="text-light">Komandų nėra.</p>
      {% else %}
        <ul>
          {% for team in teams2 %}
            <li>
              <a href="/teams/{{ team.id }}">{{ team.name }}</a>
              <a class="btn btn-sm btn-danger mb-2" href="/teams/{{team.id}}/decline" role="button"  onclick="return confirm('Ar tikrai norite panaikinti kvietimą?');">&#10006;</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>

  <hr>

  <h4>Turnyro komandos</h4>
  {% if teams3 is empty %}
    <p class="text-light">Komandų nėra.</p>
  {% else %}
    <ul>
      {% for team in teams3 %}
        <li><a href="/teams/{{ team.id }}">{{ team.name }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

{% endblock %}